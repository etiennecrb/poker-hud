{
  "name": "poker-hud",
  "version": "1.0.0",
  "description": "Electron app dev environment for poker hud",
  "main": "main.js",
  "dependencies": {
    "@angular/common": "~2.4.0",
    "@angular/compiler": "~2.4.0",
    "@angular/core": "~2.4.0",
    "@angular/forms": "~2.4.0",
    "@angular/http": "~2.4.0",
    "@angular/material": "^2.0.0-beta.2",
    "@angular/platform-browser": "~2.4.0",
    "@angular/platform-browser-dynamic": "~2.4.0",
    "@angular/router": "~3.4.0",
    "core-js": "^2.4.1",
    "lodash": "^4.17.2",
    "mkdirp": "^0.5.1",
    "nedb": "^1.8.0",
    "ngx-electron": "0.0.10",
    "reflect-metadata": "^0.1.10",
    "rxjs": "5.0.1",
    "uuid": "^3.0.1",
    "zone.js": "^0.7.4"
  },
  "devDependencies": {
    "@types/electron": "^1.4.33",
    "@types/lodash": "^4.14.41",
    "@types/mkdirp": "^0.3.29",
    "@types/nedb": "0.0.31",
    "@types/node": "^6.0.45",
    "angular2-template-loader": "^0.6.0",
    "awesome-typescript-loader": "^3.0.4",
    "css-loader": "^0.26.1",
    "electron": "^1.6.1",
    "electron-packager": "^8.5.2",
    "extract-text-webpack-plugin": "2.0.0-beta.5",
    "file-loader": "^0.9.0",
    "html-loader": "^0.4.3",
    "html-webpack-plugin": "^2.16.1",
    "raw-loader": "^0.5.1",
    "style-loader": "^0.13.1",
    "tap": "^10.3.0",
    "ts-node": "^2.1.0",
    "typescript": "~2.2",
    "webpack": "2.2.1"
  },
  "scripts": {
    "app-build": "webpack --config config/webpack.app.js --progress --profile",
    "app-watch": "webpack --config config/webpack.app.js --watch",
    "clean": "rm -rf dist/* && rm -rf build/",
    "electron-build": "webpack --config config/webpack.electron.js",
    "electron-run": "electron ./dist/main.js",
    "prepackage": "rm -f dist/*.map && cp package.json dist/",
    "package": "electron-packager dist --out build/",
    "start": "npm run clean && npm run app-build && npm run electron-build && npm run electron-run | npm run app-watch",
    "test": "ts-node node_modules/tap/bin/run ./shared/**/tests/*.ts",
    "build": "npm run clean && npm run app-build && npm run electron-build && npm run package"
  },
  "author": "Étienne Corbillé",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/etiennecrb/poker-hud/issues"
  },
  "homepage": "https://github.com/etiennecrb/poker-hud#readme"
}
